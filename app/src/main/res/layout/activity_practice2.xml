<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Practice2"
    android:background="#009688"
    android:orientation="horizontal">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:background="#045A52">
        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:layout_width="200dp"
                android:layout_height="100dp"
                android:text="Chọn dịch vụ"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:background="#045A52"
                />
            <Button
                android:layout_marginEnd="20dp"
                android:text="Thoát"
                android:layout_width="40dp"
                android:layout_height="50dp"/>
        </TableRow>
    </TableLayout>
<TableLayout>
    <TableRow android:gravity="center" android:orientation="horizontal">
        <LinearLayout android:orientation="vertical" android:layout_marginRight="100dp"
            android:layout_marginBottom="70dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/maygiat" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Giặt ủi"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/taxi1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Taxi"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/hotel"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khách sạn"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/fp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Thức ăn nhanh"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/vanchuyen" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Vận chuyển"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </TableRow>
</TableLayout>

</TableLayout>